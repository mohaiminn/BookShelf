@model MyApp.Models.BooksModel

@{
    ViewBag.Title = "Update";
}

<br />

<h4>Update Book</h4>

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

