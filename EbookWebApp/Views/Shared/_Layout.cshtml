<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link href="~/Style/Style.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="banner">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand " href="#"><img class="img-fluid" src="~/Images/logo.png" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <b class="nav-link"> @Html.ActionLink("Home", "loginindex", "Home", null, new { @class = "nav-link" })</b>                    </li>
                    <li class="nav-item">
                        <b class="nav-link"> @Html.ActionLink("Books", "GetAllBooks", "Admin", null, new { @class = "nav-link" })</b>
                    </li>

                </ul>
                <ul class="navbar-nav ml-auto" style="margin-top:1em;">
                    <li class="nav-item">
                        <b class="nav-link">@Html.ActionLink("Competetions", "Competetion", "Home", null, new { @class = "nav-link" })</b>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                <li class="nav-link" style="margin-top:-0.5em;">
                    <b class="nav-link"> @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })</b>
                </li>
                    }
                    else
                    {
                <li class="nav-link" style="margin-top:-0.5em;">
                    <b class="nav-link"> @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</b>
                </li>
                    }

                </ul>
            </div>
        </nav>
    </div>

    <br />
    <br />

    <div>
        @RenderBody()
    </div>

    <div class="container-fluid">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4 point footer">
            <p class="text-center">
                <img src="~/Images/logo.png" class="img-responsive" height="80px" width="100px">
            </p>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4 point footer">
            <h5>Contact Dealer</h5>
            <p>
                © 2009 - 2020 Bookshelf, Author website 2585 Broadway, Suite 374
                New York, NY, USA 10025
                Call us: 1-866-619-9574
            </p>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4 point footer">
            <h5>About :</h5>
            <p>Bookshelf</p>
        </div>
    </div>

</body>
</html>